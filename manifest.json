{
    "manifest_version": 3,
    "name": "Social Sentiment",
    "version": "1.0",
    "description": "Analyzes the Sentiment of posts in different social media networks",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/jquery-3.6.3.min.js","scripts/bootstrap.bundle.min.js","scripts/facebook.js"
            ],
            "css" : ["css/bootstrap.min.css"],
            "matches": [
                "https://*.facebook.com/*"
            ]
        }
    ]
}